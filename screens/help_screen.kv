<HelpScreen>:
    name: 'help'
    canvas.before:
        Color:
            rgba: app.screen_manager.get_background_color()
        Rectangle:
            size: self.size
            pos: self.pos

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Ayuda'
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.screen_manager.back_to_previous_screen()]]

        ScrollView:
            RstDocument:
                id: help_text
                text: ''
                size_hint_y: None
                height: 540
                padding: dp(10)
