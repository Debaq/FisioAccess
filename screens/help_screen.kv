<HelpScreen@MDScreen>:

    MDBoxLayout:
        orientation: 'vertical'


        ScrollView:
            RstDocument:
                id: help_text
                text: ''
                size_hint_y: None
                height: 540
                padding: dp(10)

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(10)
            md_bg_color: app.theme_cls.shadowColor  

            MDIconButton:
                valign: "center"
                icon: 'arrow-left'
                on_release: app.change_screen('HomeScreen')

            MDLabel:
                text: "Universidad Austral de Chile Sede Puerto Montt"
                halign: "right"
                valign: "center"
                size_hint_x: 0.8